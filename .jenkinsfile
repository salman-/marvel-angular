pipeline {
    agent any

    environment {
        CHROME_BIN = "/usr/bin/google-chrome"
    }

    stages {
        stage('Preparation') {
            steps {
                checkout scm
            }
        }
        stage('Install dependencies') {
            steps {
                sh "pwd"   
                sh "npm --version"
                sh 'npm install'

                // http-server is used to run the built app
                 sh 'npm install http-server'

                // Install Angular CLI locally instead of globally
                sh 'npm install @angular/cli'
            
                // Use the locally installed Angular CLI
                sh "./node_modules/.bin/ng version"
            }
        }
        stage('Build') {
            steps {
                // Use the locally installed Angular CLI
                sh './node_modules/.bin/ng build'
            }
        }
        stage('Test') {
            steps {
                // Use the locally installed Angular CLI
                sh './node_modules/.bin/ng test --watch=false --browsers ChromeHeadless'
            }
        }
        stage('Run') {
            steps {
        // Install a simple HTTP server to serve static files
        sh 'npm install http-server'

        // Navigate to the directory containing the built Angular app
        // Assuming the Angular project name is 'your-angular-project-name', adjust as needed
        sh 'cd dist/my-twitter-app/browser'

        // Start the HTTP server
        // Note: This will still not be suitable for background or production use without proper process management
        sh 'nohup ../node_modules/.bin/http-server -p 4200 > /dev/null 2>&1 &'
            }
        }
    }
    post {
        always {
            echo 'This will always run regardless of the build status.'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
