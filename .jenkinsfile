pipeline {
    agent any

    environment {
        CHROME_BIN = "/usr/bin/google-chrome"
    }

    stages {
        stage('Preparation') {
            steps {
                checkout scm
            }
        }
        stage('Install dependencies') {
            steps {
                sh "pwd"   
                sh "npm --version"
                sh 'npm install'

                // http-server is used to run the built app
                 sh 'npm install http-server'

                // Install Angular CLI locally instead of globally
                sh 'npm install @angular/cli'
            
                // Use the locally installed Angular CLI
                sh "./node_modules/.bin/ng version"
            }
        }
        stage('Build') {
            steps {
                // Use the locally installed Angular CLI
                sh './node_modules/.bin/ng build'
            }
        }
        stage('Test') {
            steps {
                // Use the locally installed Angular CLI
                sh './node_modules/.bin/ng test --watch=false --browsers ChromeHeadless'
            }
        }
        stage('Deploy') {
            steps {

                   withCredentials([string(credentialsId: 'd2e2f88b-21cc-443e-99d2-cf09258cb2ce', variable: 'AZURE_TENANT_ID')],
                                   [string(credentialsId: '92564f3f-900a-4ac7-a425-be3f832cdb0d', variable: 'AZURE_CLIENT_ID')],
                                   [string(credentialsId: '9f852668-e81d-48f6-81bb-eb048b7ff422', variable: 'AZURE_CLIENT_SECRET')],) {
                    
                  sh 'echo "Deploy to Azure"'
                  sh 'az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET --tenant $AZURE_TENANT_ID'
                }

            }
        }
    }
    post {
        always {
            echo 'This will always run regardless of the build status.'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
